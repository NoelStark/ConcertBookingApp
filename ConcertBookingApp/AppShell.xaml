<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ConcertBookingApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ConcertBookingApp.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="ConcertBookingApp">
    <TabBar>
        <Tab Title="Home"
             Icon="home.png">
            <ShellContent
                Title="ConcertOverviewPage"
                ContentTemplate="{DataTemplate local:ConcertOverviewPage}"
                Route="ConcertOverviewPage" />
        </Tab>

        <Tab Title="CurrentBooking"
             Icon="ticketblack.png">
            <ShellContent
                Title="BookingsPage"
                ContentTemplate="{DataTemplate local:BookingsPage}"
                Route="BookingsPage" />
        </Tab>

        <Tab Title="Cart"
             Icon="cart.png">
            <ShellContent
                Title="CheckoutPage"
                ContentTemplate="{DataTemplate local:CheckoutPage}"
                Route="CheckoutPage" />
        </Tab>
    </TabBar>
    <ShellContent
        Title="ConcertDetailsPage"
        ContentTemplate="{DataTemplate local:ConcertDetailsPage}"
        Route="ConcertDetailsPage" />
    <!--<ShellContent
        Title="CheckoutPage"
        ContentTemplate="{DataTemplate local:CheckoutPage}"
        Route="CheckoutPage" />-->
    <ShellContent
        Title="PaymentPage"
        ContentTemplate="{DataTemplate local:PaymentPage}"
        Route="PaymentPage" />
    <!--<ShellContent
        Title="BookingsPage"
        ContentTemplate="{DataTemplate local:BookingsPage}"
        Route="BookingsPage" />-->




    <!--<ShellContent Title="ConcertDetailPage" ContentTemplate="{DataTemplate local:BookingsPage}" Route="ConcertDetailsPage" />-->

</Shell>
